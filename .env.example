# AleppoGift Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG_MODE=true

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=aleppogift

# Site Configuration
SITE_URL=http://localhost/dubgift/aleppogift/public/

# Email Configuration
EMAIL_FROM=orders@aleppogift.com
EMAIL_FROM_NAME=AleppoGift Orders
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Configuration
ZIINA_SECRET_KEY=your-ziina-secret-key-here
ZIINA_TEST_MODE=true

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here123
CSRF_SECRET=your-csrf-secret-key-here
